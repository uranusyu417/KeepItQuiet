<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ENCRYPTOR_MAIN" >

        <EditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="@string/CONTENT_HINT"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

        <RadioGroup
            android:id="@+id/radioGroupEncryptionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextContent"
            android:layout_below="@+id/editTextContent"
            android:layout_marginTop="20dp" >

            <RadioButton
                android:id="@+id/radioEncrypted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/ENCRYPTED" />

            <RadioButton
                android:id="@+id/radioDecrypted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DECRYPTED" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroupEncryptionStatus"
            android:layout_below="@+id/radioGroupEncryptionStatus"
            android:text="Update" />

        <TextView
            android:id="@+id/textViewDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonUpdate"
            android:layout_below="@+id/buttonUpdate" />

        <EditText
            android:id="@+id/editTextKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroupEncryptionStatus"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/radioGroupEncryptionStatus"
            android:ems="10"
            android:hint="@string/KEY_HINT"
            android:inputType="numberDecimal" />
    </RelativeLayout>

</ScrollView>